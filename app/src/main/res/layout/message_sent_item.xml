<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="205dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/message_sent_item_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="message"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="5dp"
        android:textSize="13sp"
        android:background="@drawable/sent_drawable"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/sent_feeling"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_fb_love"
        app:layout_constraintBottom_toBottomOf="@+id/message_sent_item_text"
        app:layout_constraintEnd_toStartOf="@+id/message_sent_item_text"
        app:layout_constraintStart_toStartOf="@+id/message_sent_item_text"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>