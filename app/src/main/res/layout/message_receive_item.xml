<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_receive_item_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:background="@drawable/receivable_drawable"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="receive"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/receive_feeling"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_fb_love"
        app:layout_constraintBottom_toBottomOf="@+id/message_receive_item_text"
        app:layout_constraintEnd_toEndOf="@+id/message_receive_item_text"
        app:layout_constraintStart_toEndOf="@+id/message_receive_item_text"
        app:layout_constraintTop_toTopOf="@+id/message_receive_item_text" />
</androidx.constraintlayout.widget.ConstraintLayout>